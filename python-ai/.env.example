# BioVerse Python AI Service Configuration

# Server Configuration
PYTHON_AI_PORT=8000
PYTHON_AI_HOST=0.0.0.0
ENVIRONMENT=development
DEBUG=true

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://bioverse_admin:2002Fred??@localhost:5432/bioverse_zambia_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bioverse_zambia_db
DB_USER=bioverse_admin
DB_PASSWORD=2002Fred??

# Node.js Server Integration
NODE_SERVER_URL=http://localhost:3000
NODE_SERVER_API_KEY=your_api_key_here

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:1.5b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_VISION_MODEL=llava:7b
ENABLE_OLLAMA=true

# OpenAI Fallback
OPENAI_API_KEY=your_openai_api_key_here
ENABLE_OPENAI_FALLBACK=true

# Machine Learning Configuration
ML_MODEL_PATH=./models
ENABLE_GPU=false
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512

# Digital Twin Configuration
TWIN_VISUALIZATION_ENGINE=pyvista
ENABLE_3D_RENDERING=true
TWIN_UPDATE_INTERVAL=30
ENABLE_REAL_TIME_TWINS=true

# Health Analytics
ENABLE_PREDICTIVE_ANALYTICS=true
PREDICTION_HORIZON_DAYS=30
RISK_THRESHOLD=0.7
ENABLE_ANOMALY_DETECTION=true

# Visualization Configuration
PLOT_BACKEND=plotly
ENABLE_INTERACTIVE_PLOTS=true
CHART_THEME=bioverse
EXPORT_FORMAT=png,svg,html

# Performance Configuration
WORKER_PROCESSES=4
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL=300
ENABLE_REDIS_CACHE=false

# Security
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_STRUCTURED_LOGGING=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true