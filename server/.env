# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Database Configuration
DB_USER=bioverse_admin
DB_HOST=localhost
DB_NAME=bioverse_zambia_db
DB_PASSWORD='2002Fred??'
DB_PORT=5432

# JWT Authentication
JWT_SECRET=supersecretjwtkey
JWT_EXPIRY=24h

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id

# API Configuration
API_RATE_LIMIT=1000
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=false

# Performance Configuration
CACHE_TTL=300
ENABLE_MEMORY_CACHE=true
ENABLE_PERFORMANCE_MONITORING=true
GC_THRESHOLD=80

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true

# AI Services Configuration
# Ollama (Local AI) - Primary AI service
USE_OLLAMA=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:1.5b

# OpenAI (Fallback)
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL_ENDPOINT=https://api.openai.com/v1/chat/completions
# Python AI Backend Integration
PYTHON_AI_URL=http://localhost:8000
PYTHON_AI_API_KEY=bioverse-ai-key
PYTHON_AI_TIMEOUT=30000
PYTHON_AI_RETRY_ATTEMPTS=3
ENABLE_PYTHON_AI=true

